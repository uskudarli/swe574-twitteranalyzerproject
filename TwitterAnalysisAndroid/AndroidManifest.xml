<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.twitteranalysisandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.activity.TwitterAnalysis"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		    <activity  
		         android:name="com.example.activity.QueryActivity"
		         android:screenOrientation="portrait" />
		    
		    <activity  
             android:name="com.example.activity.ReportsActivity"
             android:screenOrientation="portrait" />
		    
		    <activity  
             android:name="com.example.activity.SettingsActivity"  
             android:screenOrientation="portrait" />
    </application>

</manifest>
