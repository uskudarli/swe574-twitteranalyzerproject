<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:padding="@dimen/heavy_padding" >
            
        <!-- page title -->
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/light_margin"
            android:text="@string/menu_reports"
            android:textColor="@color/twitter_blue"
            android:textSize="@dimen/font_size_large" />
        
        <!-- app name title -->
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/heavy_margin"
            android:text="@string/app_name"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/font_size_large" />
        
        <com.example.twitteranalysisandroid.SquareLinearLayout 
            android:id="@+id/pie_chart" 
            android:orientation="horizontal"
            android:layout_width="match_parent" 
            android:layout_height="0dp"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/font_size_large" />
        
    </LinearLayout>
    
</ScrollView>